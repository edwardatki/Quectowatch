/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "Quectowatch";
	compatible = "ed-atkinson,quectowatch";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	aliases {
		led0 = &myled0; // I don't understand why this only works with an alias yet
	};

	leds {
		compatible = "gpio-leds";
		
		myled0: led_0 {
			gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
			label = "Red LED";
		};
	};
};

&gpio0 {
	status="ok";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x72000>;
		};
		slot1_partition: partition@7e000 {
			label = "image-1";
			reg = <0x7e000 0x72000>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0xf0000 0xa000>;
		};
		storage_partition: partition@fa000 {
			label = "storage";
			reg = <0xfa000 0x6000>;
		};
	};
};

